# Server Configuration
SERVER_PORT=8080
SERVER_BODY_LIMIT=10485760
SERVER_TIMEOUT=30
SERVER_CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/bookstore

# JWT Configuration
JWT_ACCESS_TOKEN_EXPIRY_MINUTES=15

# Environment
ENVIRONMENT=development

# Security Configuration
ARGON2_MEMORY_COST=65536
ARGON2_TIME_COST=3
ARGON2_PARALLELISM=4

# User Secrets (JWT Keys)
JWT_USERS_SECRET=your-super-secret-jwt-key-at-least-32-characters-long
JWT_USERS_REFRESH_SECRET=your-super-secret-refresh-key-at-least-32-characters-long
